<nav class="topnav" id="myTopnav">
    <img
        src="https://public.svsticky.nl/logos/logo_compact_outline_wit.png"
        alt="Logo SV Sticky"
    />
    <ul>
        <li><a href="#info">Over de introductie</a></li>
        <li><a href="#signup">Inschrijven</a></li>
        <li><a href="#theme">Thema</a></li>
        <li><a href="#sticky">Over Sticky</a></li>
        <li><a href="#FAQ">FAQ</a></li>
        <li><a href="#contact">Contact</a></li>
    </ul>
    <a href="javascript:void(0);" class="icon" onclick="toggleNav()">&#9776;</a>
</nav>

<script>
    declare global {
        interface Window {
            toggleNav: () => void;
        }
    }

    function toggleNav() {
        const x = document.getElementById("myTopnav")!;
        x.classList.toggle("responsive");
    }
    window.toggleNav = toggleNav;
</script>

<style lang="scss">
    html {
        scroll-behavior: smooth;
    }

    nav {
        background: #197052;
        height: 4rem;
        padding: 1rem 10rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: calc(100vw - 20rem);

        img {
            height: 4rem;
            align-self: flex-start;
        }

        ul {
            align-self: flex-end;
            display: flex;
            list-style-type: none;
            gap: 2rem;
            padding: 0;
            

            li a {
                color: white;
                text-decoration: none;

                &:hover {
                    text-decoration: underline;
                }
            }
        }

        .icon {
            display: none;
            font-size: 1.8rem;
            color: white;
            cursor: pointer;
        }
    }

    @media screen and (max-width: 768px) {
        nav {
            padding: 1rem 1.5rem;
            flex-wrap: wrap;
            width: calc(100vw - 3rem);
            height: auto;
        }

        nav ul {
            display: none;
            flex-direction: column;
            gap: 1rem;
            width: 100%;
        }

        nav.responsive ul {
            display: flex;
            height: auto;
        }

        nav .icon {
            display: block;
            text-decoration: none;
            position: absolute;
            top: 1rem;
            right: 1.5rem;
            z-index: 999;
        }
    }
</style>
