<style>
    .contact-grid {
        display: flex;
        flex-wrap: nowrap; /* Ensures they stay next to each other */
        gap: 2rem;
        margin-top: 1.5rem;
    }

    .contact-card {
        display: flex;
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 50%;
        align-items: stretch;
        border-left: 8px solid #197052;
    }

    .contact-info {
        flex: 1;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: left;
    }

    .contact-info h3 {
        margin: 0;
        font-size: 1.4rem;
        font-weight: bold;
    }

    .contact-info p {
        margin: 0.2rem 0;
        color: #555;
    }

    .contact-image {
        flex: 1;
        width: 100%;
        height: auto;
        object-fit: cover;
        min-width: 130px;
    }

    .contact-card p strong {
        color: black;
    }
</style>

<section class="contact-section">
